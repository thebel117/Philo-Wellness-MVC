@model PhiloWellnessMVC.Models.VisitModels.VisitEditViewModel

@{
    ViewData["Title"] = "Edit Visit";
}

<h1>Edit Visit</h1>

@if (ViewData["ErrorMsg"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMsg"]
    </div>
}

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @Html.HiddenFor(model => model.VisitId)
                <div class="form-group">
                    <label asp-for="VisitDate" class="control-label"></label>
                    <input asp-for="VisitDate" type="date" class="form-control" />
                    <span asp-validation-for="VisitDate" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ReasonForVisit" class="control-label"></label>
                    <input asp-for="ReasonForVisit" class="form-control" placeholder="Reason for visit" />
                    <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DetailedReason" class="control-label"></label>
                    <input asp-for="DetailedReason" class="form-control" placeholder="Detailed reason (optional)" />
                    <span asp-validation-for="DetailedReason" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </form>

            <div>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
