@model PhiloWellnessMVC.Models.VisitModels.VisitDetailViewModel

@{
    ViewData["Title"] = "Visit Details";
}

<h1>Visit Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.VisitId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.VisitId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.VisitDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.VisitDate.ToShortDateString())
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ReasonForVisit)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ReasonForVisit)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DetailedReason)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DetailedReason)
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.VisitId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
