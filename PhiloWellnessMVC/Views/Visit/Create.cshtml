@model PhiloWellnessMVC.Models.VisitModels.VisitCreateViewModel

@{
    ViewData["Title"] = "Create A Visit";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<h1>Create A Visit</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "UserId", "UserName"))">
                    <option value="">Select a User</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VisitDate" class="control-label"></label>
                <input asp-for="VisitDate" type="date" class="form-control" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReasonForVisit" class="control-label"></label>
                <textarea asp-for="ReasonForVisit" class="form-control" placeholder="Reason for visit..."></textarea>
                <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetailedReason" class="control-label"></label>
                <textarea asp-for="DetailedReason" class="form-control" placeholder="Detailed reason (optional)..."></textarea>
                <span asp-validation-for="DetailedReason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
        <div>
            <a asp-action="Index" class="text-dark">Back To Visits List</a>
        </div>
    </div>
</div>
