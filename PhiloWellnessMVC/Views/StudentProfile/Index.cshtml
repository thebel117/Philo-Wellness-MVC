@model IEnumerable<PhiloWellnessMVC.Models.StudentProfileModels.StudentProfileIndexViewModel>

@{
    ViewData["Title"] = "Student Profiles Index";
}

<h1 class="text-center">All Student Profiles</h1>
<a class="text-warning" asp-action="Create">Create A New Student Profile</a>

<div>
    <table class="table table-striped table-dark table-hover table-bordered border-danger">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StudentProfileId) <!-- Updated -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name) <!-- Updated -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade) <!-- Updated -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentIdNumber) <!-- Updated -->
                </th>
                <th>
                    &nbsp;
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var profile in Model)
            {
                <tr>
                    <td>
                        @profile.StudentProfileId <!-- Updated -->
                    </td>
                    <td>
                        @profile.Name <!-- Updated -->
                    </td>
                    <td>
                        @profile.Grade <!-- Updated -->
                    </td>
                    <td>
                        @profile.StudentIdNumber <!-- Updated -->
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "StudentProfile", new { id = profile.StudentProfileId }) |
                        @Html.ActionLink("Details", "Details", "StudentProfile", new { id = profile.StudentProfileId }) |
                        @Html.ActionLink("Delete", "Delete", "StudentProfile", new { id = profile.StudentProfileId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
