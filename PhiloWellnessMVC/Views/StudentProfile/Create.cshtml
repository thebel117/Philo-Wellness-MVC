@model PhiloWellnessMVC.Models.StudentProfileModels.StudentProfileCreateViewModel

@{
    ViewData["Title"] = "Create A Student Profile";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<h1>Create A Student Profile</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" placeholder="User ID" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" placeholder="Grade (1-12)" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentIdNumber" class="control-label"></label>
                <input asp-for="StudentIdNumber" class="form-control" placeholder="Student ID Number" />
                <span asp-validation-for="StudentIdNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
        <div>
            <a asp-action="Index" class="text-dark">Back To Student Profiles List</a>
        </div>
    </div>
</div>
