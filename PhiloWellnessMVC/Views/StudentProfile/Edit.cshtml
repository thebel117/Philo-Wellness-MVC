@model PhiloWellnessMVC.Models.StudentProfileModels.StudentProfileEditViewModel

@{
    ViewData["Title"] = "Edit Student Profile";
}

<h1>Edit Student Profile</h1>

@if (ViewData["ErrorMsg"] != null)
{
    <h4 class="text-center text-danger">@ViewData["ErrorMsg"]</h4>
}

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="StudentProfileId" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentIdNumber" class="control-label"></label>
                <input asp-for="StudentIdNumber" class="form-control" />
                <span asp-validation-for="StudentIdNumber" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning text-white" />
            </div>
        </form>

        <br />
        <div>
            <a asp-action="Index" class="text-dark">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
